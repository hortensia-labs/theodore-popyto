ZOTERO_USER_ID="zotero-user-id"
NEXT_PUBLIC_ZOTERO_USER_ID="next-public-zotero-user-id"

# LLM Metadata Extraction Configuration
# Provider selection: 'auto' (try all), 'ollama', 'anthropic', 'none' (disable)
LLM_PROVIDER=auto

# Fallback chain: comma-separated priority order
LLM_FALLBACK_CHAIN=ollama,anthropic

# Ollama Configuration (local LLM)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=30000

# Anthropic Configuration (Claude API)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-haiku-20241022
ANTHROPIC_TIMEOUT=30000

# Extraction Settings
LLM_MAX_INPUT_CHARS=8000
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000
LLM_CACHE_ENABLED=true

ZOTERO_USER_ID=the-zotero-user-id
NEXT_PUBLIC_ZOTERO_USER_ID=the-next-public-zotero-user-id

OLLAMA_API_KEY=ollama-api-key